/* pages/house/house.wxss */

.house .tab-title{
  display: flex;
  margin: 0;
  background-color: #fff;
  padding: 0 2%;
}
.house .tab-title .titleItem{
  flex: 1;
  text-align: center;
  border-radius: 0;
  margin:0 0.1em 0.5em;
  padding: 0.5em 0;
  border: 0;
}
.house .tab-title .titleItem.border-tottom{
  background-color: #d90f09;
  color: #fff;
}






.houseCon{
  padding: 2%;
}
.houseCon ul li .img{
  background-color: #fff;
  padding: 2%;
  position: relative;
}
.houseCon ul li image{
  width: 100%;
  height: 10em;
}
.houseCon ul li .img text{
  background-color: #fff;
  position: absolute;
  top: 60%;
  left: 5%;
  padding: 0.5em 1.2em;
  color: #d90f09;
  font-weight: bold;
}
.houseText{
  background-color: #fff;
  padding: 0 2%;
}
.houseText .title{
  font-size: 1.1em;
  font-weight: bold;
  margin-bottom:0.5em ;
}
.houseText .p{
  font-size: 0.85em;
  color: #a3a3a3;
}
.tags_price{
  background-color: #fff;
  display: flex;
}
.tags_price .tags text{
  background-color: #fbe7e6;
  color: #d90f09;
  font-weight: bold;
  font-size: 0.85em;
  padding: 0.5em 1.1em;
  margin: 1em 0 1em 0.3em;
  display: inline-block;
}

.tags_price .tags,.tags_price .price{
  flex: 1;
}
.tags_price .price{
  text-align: right;
  font-size: 1.5em;
  color: #d90f09;
  font-weight: bold;
}


.menu dt image{
  width: 1em;
  height: 1em;
  position: relative;
  top: 0.1em;
}

























