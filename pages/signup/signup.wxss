/* pages/signup/signup.wxss */
page {
  background-color: #fff;
}

.steps_box {
  margin-top: 200rpx;
  margin: auto;
  width: 100%;
  background-color: white;
  height: 200rpx;
  position: relative;
}

.progress {
  margin: auto;
  margin-top: 75rpx;
  position: absolute;
  width: 100%;
  left: 50%;
  transform: translate(-50%);
}

.steps_all {
  width: 100%;
  position: absolute;
  right: 0;
  top: 50rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
  align-items: center;
}

.steps_one_box {
  height: 100%;
  width: 20%;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
}

.steps {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  background-color: rgb(25, 185, 3);
  text-align: center;
}

.steps_img {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.steps2 {
  width: 35rpx;
  height: 35rpx;
  border-radius: 50rpx;
  background-color: rgb(25, 185, 3);
  text-align: center;
}

.steps3 {
  width: 35rpx;
  height: 35rpx;
  border-radius: 50rpx;
  background-color: rgb(185, 187, 190);
  text-align: center;
}

.steps_wenzi {
  margin-top: 40rpx;
  font-size: 25rpx;
}

.steps_wenzi2 {
  margin-top: 40rpx;
  font-size: 25rpx;
  color: rgb(112, 113, 114);
}

/*tips*/
.tips,
.phone {
  background-color: rgba(255, 187, 0, 0.199);
  color: #f00;
  padding: 0.5em;
  margin: 0.35em;
  border: 1px solid rgba(255, 187, 0, 1);
  font-size: 0.75em;
}

.tips text.i {
  display: inline-block;
  width: 1.3em;
  height: 1.3em;
  background-color: rgba(255, 187, 0, 1);
  text-align: center;
  line-height: 1.3em;
  border-radius: 50%;
  color: #fff;
}

/*手机号*/
.phone {
  color: #000;
}

.phone .p_t {
  color: rgb(255, 136, 0);
}

/* 身份证照片 */
.firststep {
  font-size: 0.8em;
  padding: 0.5em;
}

.idCardFlex {
  display: flex;
  border-bottom: 1px solid #eee;
}

.idcardItem {
  flex: 1;
  margin: 0.5em 0.35em;
}

.idcardItem .pic {
  position: relative;
}

.idcardItem .pic image {
  width: 100%;
  height: 8em;
  display: block;
  border: 1px solid #eee;
  border-radius: 0.3em;
}

.Examples {
  position: absolute;
  top: 0.2em;
  left: 0.2em;
  background-color: rgba(0, 0, 0, 0.5);
  color: #fff;
  font-size: 0.75em;
  padding: 0.2em 0.75em;
}

.photograph {
  border: 1px solid #212121;
  text-align: center;
  padding: 0.2em 0;
  margin: 0.2em 0;
  border-radius: 20em;
}

.photograph:active {
  background-color: #eee;
}

.photograph image {
  width: 1.5em;
  height: 1.1em;
  display: inline-block;
  vertical-align: middle;
  margin-right: 0.5em;
}

.photograph text {
  display: inline-block;
  vertical-align: middle;
  font-size: 0.7em;
}

/* input输入框 */

.inputText {
  margin-bottom: 3em;
}

.inputText text {
  display: inline-block;
  vertical-align: middle;
  width: 49%;
  padding: 0 0.5em;
  box-sizing: border-box;
}

.inputText input {
  display: inline-block;
  vertical-align: middle;
  background-color: #fff;
  width: 50%;
  text-align: right;
}

.inputText .label {
  padding: 0.75em 0.5em;
  border-bottom: 1px solid #eee;
  font-size: 0.9em;
}

.submit {
  z-index: 99999;
}

/* 阅读拍卖明细 */
.read {
  text-align: center;
  font-size: 0.85em;
  color: #eb0347;
}

.read navigator {
  padding: 1em 0;
}


/* 第二步 支付保证金 */
.payment .pary_t {
  background-color: #fafafa;
  border: 1px solid #eee;
  padding: 0.5em;
  margin: 0.35em;
}

.payment .p_t image {
  width: 5em;
  height: 5em;
  display: inline-block;
  vertical-align: middle;
}

.p_tt {
  display: inline-block;
  width: 60%;
  vertical-align: middle;
}

.p_tt text {
  font-size: 0.85em;
  display: block;
}

.p_tt text:last-child {
  color: #999;
  margin: 0.35em 0;
  font-size: 0.75em;
}

.pay_tips {
  font-size: 0.8em;
  border-top: 1px solid #eee;
  color: #999;
  padding: 0.5em;
  line-height: 1.75;
}

.p_m_t{
  margin: 0.5em 0;
}
.payment_money {
  padding: 0.5em;
  border: 1px solid #eee;
  font-size: 0.8em;
  margin: 0.5em;
}

.location_bottom {
  color: #d91f16;
  font-size: 28rpx;
  align-items: center;
}

.add_city {
  width: 7.4em;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  border: 1px solid #19b903;
  display: inline-block;
  color: #19b903;
  margin: 0.3em 0.7em 0.3em 0;
}

.add_citying {
  background-color: #19b903;
  border: 1px solid #19b903;
  color: #fff;
  margin: 0.3em 0.7em 0.3em 0;
  display: inline-block;
  width: 7.4em;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
}
.paybtn{
  background-color: #19b903;
  color: #fff;
  padding: 0.85em 0;
  text-align: center;
  margin: 0.35em 0;
}
.paybtn:active{
  background-color: #118f00;
}
.careful{
  padding: 0.5em 0;
}
.careful text{
  display: block;
  line-height: 1.75;
}

/* 第三步 认证成功 */
.authentication{
  border: 1px solid #eee;
  background-color: #fafafa;
  margin: 0.5em;
  padding: 1em 0;
}
.authentication .pic{
  text-align: center;
}
.authentication .pic image{
  width: 8em;
  height: 8em;
}
.signupText{
  text-align: center;
  font-size: 0.8em;
}



