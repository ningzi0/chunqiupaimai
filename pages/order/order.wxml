              </block>
          </ul>
      </view>
  </view>
  <view class="{{selected4?'show':'hidden'}}">
      <!-- 空状态 -->
      <view class="empty">
          <view class="emptyContent">
              <image src="/images/icon/empty.png"></image>
              <text>暂无相关拍品</text>
          </view>
      </view>
  </view>
