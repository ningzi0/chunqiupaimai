  margin: 0.5em 0;
  font-size: 0.85em;
  vertical-align: middle;
}
.inputp text{
  font-size: 0.85em;
  display: inline-block;
  vertical-align: middle;
}
.btn{
  display: flex;
}
.btn view{
  flex:1;
}
.btn2{
  padding: 0.75em 0;
  background-color: #d94b09;
  color: #fff;
  text-align: center;
}
.btn2:active{
  opacity: 0.5;
}
.inputbtn{
  background-color: #d90f09;
  color: #fff;
