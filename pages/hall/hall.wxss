/* pages/hall/hall.wxss */
.hallbody{
  padding: 0.5em;
}
.halltop image{
  width: 100%;
  height: 12em;
  display: block;
}
.halltop .pic{
  position: relative;
}
.hallpicText{
  position: absolute;
  width:100%;
  bottom: 0;
  background-color: #f5f5f5;
  font-size: 0.85em;
  display: flex;
}
.hallpicText .soon{
  background-color: #0bac3b;
  color: #fff;
  padding: 0.5em ;
  flex: 1;
  text-align: center;
}
.day_time{
  display: inline-block;
  padding: 0.5em ;
  flex: 2;
  text-align: center;
}
.hallTitle{
  background-color: #fff;
  padding: 0.75em;
  font-size: 0.95em;
}
.list{
  background-color: #fff;
  margin: 0.5em 0;
}
.listTitle{
  text-align: center;
  font-size: 0.95em;
  padding: 0.75em 0;
  border-bottom: 1px solid #eee;
  margin-bottom: 0.5em;
}

.assetsContent ul li navigator{
  margin: 0.5em 0;
  padding: 0;
}