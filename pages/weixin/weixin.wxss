/* 关注公众号 */
.follow{
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 99999;
}

.followContent{
  background-color: #fff;
  width: 100%;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  font-size: 0.9em;
}
.followContent .fllowTit{
  text-align: center;
  padding: 0.75em 0;
  border-bottom: 1px solid #eee;
}
.followContent .fllowCon{
  padding: 0.75em;
  text-align: center;
}
.followContent .fllowBtn{
  display: flex;
}
.followContent .fllowBtn .fllowBtnItem{
  flex: 1;
  text-align: center;
  padding: 0.75em 0;
  color: #fff;
}
.followContent .fllowBtn .fllowBtnItem:first-child{
  background-color: #eb0347;
}
.followContent .fllowBtn .fllowBtnItem:last-child{
  background-color: #afafaf;
}

