page{
  background-color: #e9eaee;
}
.bgcolor{
  min-height: 35em;
  background: linear-gradient(#eb0347, #e9eaee);
}
.logo_tel{
  color: #fff;
}

.logo_tel .logo,.logo_tel .tel{
  display: inline-block;
  vertical-align: middle;
}
.logo_tel image{
  width: 1.2em;
  height: 1.2em;
  display: inline-block;
  vertical-align: middle;
  margin-right: 0.25em;
}
.logo_tel text{
  display: inline-block;
  vertical-align: middle;
}
.logo_tel .tel{
  width: 100%;
  font-size: 0.8em;
  display: flex;
  padding: 0.35em 0;
}
.telwrap,.baowrap{
  flex: 1;
  background-color: #ffffff1e;
  padding: 0.35em 0em;
  text-align: center;
  margin: 0 0.15em;
}
.banner swiper{
  height: 12.9em;
  background: #fff;
  padding: 0.35em;
}
.banner image{
  width: 100%;
  height: 100%;
}
.search_sort{
  min-height: 20em;
  background: #fff;
  border-radius: 0.2em;
  margin: 0.3em 0;
  overflow: hidden;
}
.search{
  position: relative;
  padding: 0;
}
.search input{
  border: 1px solid #eb0347;
  padding: 0.5em 0.5em 0.5em 2em;
  margin: 0.75em;
  border-radius: 10em;
}
.search image{
  position: absolute;
  top: 50%;
  transform: translate(0,-50%);
  width: 1.3em;
  height: 1.3em;
  left: 1.5em;
}
.search .btn{
  position: absolute;
  height: 100%;
  width: 20%;
  background: #eb0347;
  color: #fff;
  top: 0;
  right: 3%;
  border-radius: 10em;
  z-index: 5555;
  text-align: center;
  line-height: 2.4;
}
.search .btn:active{
  background-color: #c7043e;
}
.sort .li{
  text-align: center;
}
.sort .li navigator{
  display: inline-block;
  margin: 4% 0% 0 0;
  width: 5.4em;
}
.sort .li navigator:nth-child(4n){
  margin-right: 0;
}
.sort .li image{
  width: 3em;
  height: 3em;
  display: inline-block;
}
.sort .li text{
  display: block;
  font-size: 0.9em;
}
.processTitle{
  width: 2em;
  background-color: #f2f2f2;
  padding: 1em;
  font-size: 1.2em;
  font-weight: bold;
  display: inline-block;
}
.processList{
  display: inline-block;
  width: 77%;
  overflow-x: scroll;
  float: right;
  margin-top: 0.45em;
}
.processWrap{
  width: 180%;
}
.process{
  margin: 1.5em 0 0;
  border-top: 1px solid #ededed;
  border-bottom: 1px solid #ededed;
}
.processItem{
  text-align: center;
  display: inline-block;
  padding: 0.5em;
  vertical-align: middle;
}
.processItem image{
  width: 2em;
  height: 2em;
  display: inline-block;
}
.processItem text{
  display: block;
  font-size: 0.8em;
  padding: 0.25em 0;
  color: #acacac;
}
.rightarr{
  width: 0.85em;
  height: 0.85em;
  vertical-align: middle;
  display: inline-block;
}
.noticeTitle{
  font-size: 1.2em;
  font-weight: bold;
  padding: 1em 0.2em 1em 1em;
  display: inline-block;
  vertical-align: middle;
}
.noticeCon{
  display: inline-block;
  vertical-align: middle;
  width: 75%;
}


.swiper_zi{
  height: 50rpx;
  }
  .swiper_zi .zimubox{
    height:100%;
    width: 100%;
    display: flex;/*横向布局*/
  }
  .swiper_zi .zimubox .swiper_item {
    font-size: 0.9em;
    overflow: hidden;/*隐藏溢出*/
    text-overflow: ellipsis;/*显示省略符号来代表被修剪的文本*/
    white-space: nowrap;/*强制文字不换行*/
    color: #373737;
    line-height: 50rpx;
  }
.noticeCon .tags{
  color: #d90f09;
  border: 1px solid #d90f09;
  margin: 0 0.1em;
  padding: 0 0.3em;
  font-size:0.8em ;
}



/* 今日拍卖-正在进行-近期预告 */
.tab-title{
  width:100%;
  display:flex;
  flex-direction: row;
}
.tab-title view{
  flex:auto;
  text-align:center;
}
.tab-title view.border-tottom{
  background-color: #d90f09;
  color: #fff;
}
.tab-title view.border-tottom text{
  color: #fff;
}
.show{display:block;}
.hidden{display:none;}
.tab-title .titleItem{
  background-color: #fff;
  margin:0.2em 0.1em 0 0;
  width: 30%;
  font-size: 1.2em;
  font-weight: bold;
  padding: 0.45em 0;
  position: relative;
  overflow: hidden;
}
.tab-title view:last-child{
  margin-right: 0;
}
.bigtitle{
  border-bottom: 1px solid #d90f09;
}
.today{
  color: #d90f09;
}
.now{
  color: #eb0045;
}
.future{
  color: #0e8d1a;
}
.smallTitle{
  margin: 0.35em 0;
}
.smallTitle view.titleItem{
  font-size: 1em;
  color: #626262;
  border: 1px solid #c4c4c4;
  border-radius: .35em;
  padding: 0.2em 0;
}
.smallTitle view.border-tottom{
  border: 1px solid #d90f09;
  color: #fff;
}
.bigtitle .tags{
  margin: 0em;
  width: auto;
  background: rgba(0,0,0,0.3);
  color: #fff;
  font-size: 0.6em;
  font-weight: 200;
  padding: 0;
  position: absolute;
  transform: rotate(-45deg);
  top: -17px;
  left: -28px;
  padding: 1.3em;
}
.bigtitle .tags text{
  display: block;
  position: relative;
  top: 13px;
}
.tab-title view.border-tottom .tags{
  background: rgba(255,255,255,0.9);
}
.tab-title view.border-tottom .tags text{
  color: #d90f09;
}


.more navigator{
  text-align: center;
  padding: 0.75em 0;
  background: #fff;
  border-radius: 0.3em;
}
.more text{
  color: #d90f09;
}

.before{
  margin: 0.75em 0;
}
.beforeTit{
  border-bottom: 1px solid #f4a703;
  background: #fff;
  padding: 0 0.5em;
}
.beforeTitFl{
  font-size: 1.2em;
  font-weight: bold;
  padding: 0.5em 0;
  float: left;
}
.beforeTitFl text{
  color: #f4a703;
}
.beforeTitFr{
  float: right;
  font-size:0.85em ;
  margin-top: 1.2em;
}

.before .smallTitle view.border-tottom{
  background-color: #f4a703;
  border: 1px solid #f4a703;
}
.before .tabinfoPrice{
  color: #f4a703;
}
.before .tabinfoBtn{
  background-color: #9fa1a3;
}
.before .more text{
  color: #f4a703;
}





/* 模态弹出框 */
.ejectMask{
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  z-index: 99999;
  width:80%;
  background-color: #fff;
  padding: 0.5em;
  box-shadow: 0 0 1em rgba(0,0,0,0.2);
}
.ejectMask image{
  width: 100%;
  height: 25em;
}

.close{
  position: absolute;
  width: 3em;
  height: 3em;
  background-color: #d90f09;
  border-radius: 50%;
  padding:0.35em;
  box-sizing: border-box;
  left:50%;
  margin-left: -1.25em;
  bottom: -3em;
}
.close image{
  width: 100%;
  height: 100%;
}

/* 直播讲解 */
.live{
  position: fixed;
  bottom: 20%;
  right:0.5em;
  background: rgba(255,255,255,0.9);
  font-size: 0.75em;
  z-index: 99999;
  font-weight: bold;
  border: 1px solid #eee;
  border-radius: 0.5em;
}
.live navigator{
  padding: 0.75em 0.25em;
}
.liveText{
  padding: 0.45em 0 0;
}
 













